<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".callAfriend"
    tools:showIn="@layout/activity_call_afriend">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="match_parent"
        android:layout_height="213dp"
        android:layout_gravity="center"
        android:background="#fe5447"
        android:paddingTop="22dp"
        android:paddingBottom="0dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#fe5447"
        android:fontFamily="@font/days_one"
        android:gravity="center"
        android:paddingBottom="22dp"
        android:text="Emergency Support
 Services"
        android:textColor="#ffffff"
        android:textSize="22sp"
        />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:fontFamily="@font/days_one"
            android:gravity="center"
            android:paddingBottom="22dp"
            android:text="Phone A Friend :)
"
            android:textColor="#fe5447"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/callone"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:onClick="call"
            />


    </LinearLayout>

</RelativeLayout>